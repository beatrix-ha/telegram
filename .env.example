# Telegram Bot Token (required)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather

# A comma-separated list of allowed users
TELEGRAM_USER_WHITELIST="user1,user2"

# Beatrix WebSocket connection
BEATRIX_WS_URL=ws://localhost:8080/api/ws

# LLM configuration (optional)
LLM_MODEL=claude-3-haiku-20240307
LLM_DRIVER=anthropic

# Conversation timeout in milliseconds (5 minutes)
CONVERSATION_TIMEOUT_MS=300000 